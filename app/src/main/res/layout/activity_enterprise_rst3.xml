<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".enterpriseRst.enterpriseRst2">


    <ImageView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/rogo1"
        android:text="로고"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/userphonenum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <EditText
        android:id="@+id/userphonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/loginbackgrounddrawable"
        android:hint="핸드폰 번호 입력하시오."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/userstudentid"
        tools:layout_editor_absoluteX="9dp" />


    <EditText

        android:id="@+id/userstudentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:hint="기업체명."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/useremail"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/emailcertifiedbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/loginbackgrounddrawablebuttonemail"
        android:text="인증"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/emailCertified"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toEndOf="@+id/useremail"
        app:layout_constraintTop_toBottomOf="@+id/userstudentid"
        app:layout_constraintVertical_bias="0.521" />

    <EditText

        android:id="@+id/useremail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:hint="이메일."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:src="@drawable/beng"
        app:layout_constraintBottom_toTopOf="@+id/emailCertified"
        app:layout_constraintEnd_toStartOf="@+id/emailsub1"
        app:layout_constraintStart_toEndOf="@+id/useremail"
        app:layout_constraintTop_toBottomOf="@+id/userstudentid" />

    <Spinner
        android:id="@+id/emailsub1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/loginbackgrounddrawable"
        app:layout_constraintBottom_toTopOf="@+id/emailCertified"
        app:layout_constraintEnd_toStartOf="@+id/emailcertifiedbtn"
        app:layout_constraintTop_toBottomOf="@+id/userstudentid"
        app:layout_constraintVertical_bias="0.521" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@drawable/vec"
        app:layout_constraintBottom_toBottomOf="@+id/emailsub1"
        app:layout_constraintEnd_toEndOf="@+id/emailsub1"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="@+id/emailsub1"
        app:layout_constraintTop_toTopOf="@+id/emailsub1"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/emailCertified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:hint="이메일인증"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_next"
        app:layout_constraintTop_toBottomOf="@+id/useremail"
        app:layout_constraintVertical_bias="0.375"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/btn_register_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/loginbackgrounddrawablebutton"
        android:fontFamily="@font/notosanskrbold"
        android:text="다음"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>