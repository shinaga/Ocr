<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginbackground"
    android:layout_height="match_parent"
    tools:context=".Register3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="로고"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/userphonenum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/userphonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/loginbackgrounddrawable"
        android:hint="핸드폰 번호 입력하시오."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/userstudentid"
        tools:layout_editor_absoluteX="9dp" />


    <EditText

        android:id="@+id/userstudentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:hint="학번을 입력하시오."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/useremail"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/emailcertifiedbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/loginbackgrounddrawablebuttonemail"
        android:text="인증"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/emailCertified"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/useremail"
        app:layout_constraintTop_toBottomOf="@+id/userstudentid" />

    <EditText

        android:id="@+id/useremail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:hint="이메일을 입력하시오."
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />




    <EditText
        android:id="@+id/emailCertified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/loginbackgrounddrawable"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:hint="이메일인증"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_next"
        app:layout_constraintTop_toBottomOf="@+id/useremail"
        app:layout_constraintVertical_bias="0.375"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/btn_register_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/loginbackgrounddrawablebutton"
        android:fontFamily="@font/notosanskrbold"
        android:text="다음"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>