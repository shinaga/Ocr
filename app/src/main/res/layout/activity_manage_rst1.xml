<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".ManagerRst.manageRst1">

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="로고"
      android:textSize="30sp"
      app:layout_constraintBottom_toTopOf="@+id/usermanage"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.429"
      tools:layout_editor_absoluteX="0dp" />


  <Spinner
      android:id="@+id/usermanage"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/loginbackgrounddrawable"
      android:hint="학교명을 입력하시오."
      android:paddingHorizontal="10dp"
      android:paddingVertical="8dp"
      app:layout_constraintBottom_toTopOf="@+id/userdepartment"
      tools:layout_editor_absoluteX="16dp" />

  <ImageView
      android:layout_width="15dp"
      android:layout_height="10dp"
      android:src="@drawable/vec"
      app:layout_constraintBottom_toBottomOf="@+id/usermanage"
      app:layout_constraintEnd_toEndOf="@+id/usermanage"
      app:layout_constraintHorizontal_bias="0.969"
      app:layout_constraintStart_toStartOf="@+id/usermanage"
      app:layout_constraintTop_toTopOf="@+id/usermanage"
      app:layout_constraintVertical_bias="0.533" />

  <Spinner

      android:id="@+id/userdepartment"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginBottom="12dp"
      android:background="@drawable/loginbackgrounddrawable"
      android:hint="학과를 입력하시오."
      android:paddingHorizontal="5dp"
      android:paddingVertical="8dp"
      app:layout_constraintBottom_toTopOf="@+id/username"
      tools:layout_editor_absoluteX="20dp" />

  <ImageView
      android:layout_width="15dp"
      android:layout_height="10dp"
      android:src="@drawable/vec"
      app:layout_constraintBottom_toBottomOf="@+id/userdepartment"
      app:layout_constraintEnd_toEndOf="@+id/userdepartment"
      app:layout_constraintHorizontal_bias="0.969"
      app:layout_constraintStart_toStartOf="@+id/userdepartment"
      app:layout_constraintTop_toTopOf="@+id/userdepartment" />

  <EditText

      android:id="@+id/username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginBottom="24dp"
      android:background="@drawable/loginbackgrounddrawable"
      android:hint="이름"
      android:paddingHorizontal="5dp"
      android:paddingVertical="8dp"
      app:layout_constraintBottom_toTopOf="@+id/btn_register_next"
      tools:layout_editor_absoluteX="20dp" />

  <Button
      android:id="@+id/btn_register_next"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginBottom="144dp"
      android:background="@drawable/loginbackgrounddrawablebutton"
      android:fontFamily="@font/notosanskrbold"
      android:text="다음"
      android:textColor="#ffffff"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:layout_editor_absoluteX="16dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>